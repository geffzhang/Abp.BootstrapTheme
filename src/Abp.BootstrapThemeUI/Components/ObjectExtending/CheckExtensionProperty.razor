@typeparam TEntity
@typeparam TResourceType
@using Volo.Abp.Localization
@inherits ExtensionPropertyComponentBase<TEntity, TResourceType>

@if (PropertyInfo != null && Entity != null)
{
    <Checkbox @bind-Value="@Value"
              ValidateRules="@CustomerRules"
              ShowLabel="false" 
              ShowAfterLabel="true" 
              DisplayText="@PropertyInfo.GetLocalizedDisplayName(StringLocalizerFactory)"></Checkbox>
}
