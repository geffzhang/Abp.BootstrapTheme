<Button Color="@Color" Icon="@Icon" OnClick="@Clicked" IsDisabled="@Disabled">
    <span>@Text</span>
</Button>

@code {

    [Parameter]
    public Color Color { get; set; } = Color.Active;

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public Func<Task> Clicked { get; set; }

    [Parameter]
    public bool Disabled { get; set; }
}
